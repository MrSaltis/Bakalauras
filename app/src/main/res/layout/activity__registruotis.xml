<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".Activity_Registruotis">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="192dp"
        android:layout_height="54dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Registracija"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.149" />

    <EditText
        android:id="@+id/reg_vardas"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:background="#46474747"
        android:ems="10"
        android:gravity="center|center_horizontal"
        android:hint="Vartotojo vardas"
        android:inputType="textPersonName"
        android:textColorHint="#B7353535"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.002" />

    <EditText
        android:id="@+id/reg_pastas"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="25dp"
        android:background="#46474747"
        android:ems="10"
        android:gravity="center|center_horizontal"
        android:hint="El. Paštas"
        android:inputType="textPersonName"
        android:textColorHint="#B7353535"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_vardas"
        app:layout_constraintVertical_bias="0.04000002" />

    <EditText
        android:id="@+id/reg_slaptazodis"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="25dp"
        android:background="#46474747"
        android:ems="10"
        android:gravity="center|center_horizontal"
        android:hint="Slaptažodis"
        android:inputType="textPersonName"
        android:textColorHint="#B7353535"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_pastas"
        app:layout_constraintVertical_bias="0.04000002" />

    <Button
        android:id="@+id/button_registruotis"
        android:layout_width="137dp"
        android:layout_height="62dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/frame_button"
        android:text="Registruotis"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_slaptazodis"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="Pastaba: Slaptažodis turi būti sudarytas bent iš 8 simbolių. Rekomenduojama naudoti didžiasias, mažasias raides bei skaičius"
        android:textColor="#EF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.842" />
</androidx.constraintlayout.widget.ConstraintLayout>